{
  "name": "itoolkit",
  "version": "1.0.1",
  "description": "XMLSERVICE wrapper to access to all things IBM i",
  "main": "lib/itoolkit.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "test": "./node_modules/mocha/bin/mocha.js --recursive test/unit",
    "test-integration": "./node_modules/mocha/bin/mocha.js --timeout 5s test/functional/*.js",
    "lint": "./node_modules/eslint/bin/eslint.js lib/ test/",
    "lint-fix": "./node_modules/eslint/bin/eslint.js lib/ test/ --fix",
    "release": "./node_modules/release-it/bin/release-it.js patch --ci --no-npm.publish --no-github.release --dry-run",
    "release-minor": "./node_modules/release-it/bin/release-it.js minor --ci --no-npm.publish --no-github.release",
    "release-major": "./node_modules/release-it/bin/release-it.js major --ci --no-npm.publish --no-github.release"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/IBM/nodejs-itoolkit.git"
  },
  "keywords": [
    "ibmi",
    "xmlservice",
    "rpg",
    "srvpgm"
  ],
  "author": "IBM",
  "license": "MIT",
  "homepage": "https://github.com/IBM/nodejs-itoolkit#readme",
  "contributors": [
    {
      "name": "Xu Meng",
      "email": "dmabupt@gmail.com"
    },
    {
      "name": "Tony Cairns"
    },
    {
      "name": "Aaron Bartell",
      "email": "aaronbartell@gmail.com"
    }
  ],
  "dependencies": {
    "depd": "^2.0.0",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "eslint": "^8.26.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.1.0",
    "mocha": "^10.1.0",
    "release-it": "^15.5.0",
    "sinon": "^14.0.1"
  },
  "optionalDependencies": {
    "fast-xml-parser": "^4.0.11",
    "idb-connector": "^1.2.18",
    "idb-pconnector": "^1.1.0",
    "odbc": "^2.4.6",
    "ssh2": "^1.11.0"
  },
  "engines": {
    "node": ">= 8.0"
  }
}
